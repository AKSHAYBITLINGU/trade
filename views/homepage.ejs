    <div class="deals-section">
      <a href="/deals"><h2>Grab The Deals</h2></a>
    </div>
    <h1 class="side-heading">Browse By Categories.</h1>
    <div class="categories">
      <% if (Array.isArray(categories)) { %> <% categories.slice(0,
      5).forEach(category => { %>
      <div class="category-box">
        <img
          src="/images/<%= category.image %>.jpg"
          alt="<%= category.name %>"
        />
        <!-- <h3><%= category.name %></h3> -->
        <a href="/c/<%= category.name %>"><%= category.name %></a>
      </div>
      <% }) %> <% } else { %>
      <p>No categories available</p>
      <% } %>
      <a href="/cat" class="see-all-btn">See All Categories</a>
    </div>

    <!-- Another Section -->
    <h1 class="side-heading">New Products.</h1>
    <div class="categories">
      <% if (Array.isArray(categories)) { %> <% categories.slice(0,
      5).forEach(category => { %>
      <div class="category-box">
        <img
          src="/images/<%= category.image %>.jpg"
