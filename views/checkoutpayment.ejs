<%- include('checkoutheader') -%>
<div class="payment-container">
  <h2>Payment Information</h2>
  <form
    id="payment-form"
    class="payment-form"
    action="/checkout/payment"
    method="post"
  >
    <div class="form-group">
      <label for="card_number">Card Number</label>
      <input
        type="text"
        id="card_number"
        name="card_number"
        class="form-control"
        placeholder="Enter your card number"
        required
      />
    </div>
    <div class="form-group">
      <label for="expiry_date">Expiry Date</label>
      <input
        type="text"
        id="expiry_date"
        name="expiry_date"
        class="form-control"
        placeholder="MM/YY"
        required
      />
    </div>
    <div class="form-group">
      <label for="cvv">CVV</label>
      <input
        type="text"
        id="cvv"
        name="cvv"
        class="form-control"
        placeholder="Enter CVV"
        required
      />
    </div>
    <div class="form-group">
      <label for="amount">Amount</label>
      <input
        type="text"
        id="amount"
        name="amount"
        class="form-control"
        placeholder="Enter amount"
        required
      />
    </div>
    <button type="submit" class="btn">Pay Now</button>
  </form>
  <div class="payment-options">
    <h3>Or pay with:</h3>
    <div class="payment-methods">
      <button class="payment-btn" id="phonepay">PhonePe</button>
      <button class="payment-btn" id="paytm">Paytm</button>
      <button class="payment-btn" id="gpay">Google Pay</button>
    </div>
  </div>
  <p id="error-message" class="error-message"></p>
</div>
<%- include('checkoutfooter') -%>
