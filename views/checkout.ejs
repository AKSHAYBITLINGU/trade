<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Checkout</title>
</head>
<body>
  <h1>Checkout</h1>
  
  <h2>Cart</h2>
  <ul>
    <% cart.items.forEach(item => { %>
      <li><%= item.product.name %> - Quantity: <%= item.quantity %> - Price: <%= item.product.price %></li>
    <% }); %>
  </ul>
  
  <h2>User Address</h2>
  <form action="/checkout/pay" method="POST">
    <label for="address">Address:</label>
    <input type="text" id="address" name="address" required>
    
    <h2>UPI Options</h2>
    <input type="radio" id="option1" name="upiOption" value="upi1">
    <label for="option1">UPI Option 1</label><br>
    <input type="radio" id="option2" name="upiOption" value="upi2">
    <label for="option2">UPI Option 2</label><br>
    
    <input type="hidden" name="amount" value="<%= cart.total %>">
    <input type="hidden" name="products" value="<%= JSON.stringify(cart.items) %>">
    <button type="submit">Pay Now</button>
  </form>
</body>
</html>
